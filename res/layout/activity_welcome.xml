<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tenderapp.WelcomeActivity" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

       <ImageView
	       android:id="@+id/imageView1"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignParentTop="true"
	       android:layout_centerHorizontal="true"
	       android:adjustViewBounds="true"
	       android:maxHeight="200dp"
	       android:maxWidth="200dp"
	       android:layout_gravity="center"
	       android:scaleType="fitCenter"
	       android:src="@drawable/tender_logo" />
       
        <com.parse.ParseImageView
            android:id="@+id/profPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip" 
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/userpic" />
	
	   <TextView
	       android:id="@+id/dishName"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_below="@+id/imageView2"
	       android:layout_toLeftOf="@+id/priceField"
	       android:text="Welcome"
	       android:layout_gravity="center"
	       android:textAppearance="?android:attr/textAppearanceLarge" />

	   <TextView
	       android:id="@+id/name"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_gravity="center"
	       android:text="&lt;Name>"
	       android:textAppearance="?android:attr/textAppearanceLarge" />
	
	   <ImageView
	       android:id="@+id/imageView3"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_below="@+id/nameLabel"
	       android:layout_centerHorizontal="true"
	       android:layout_marginTop="18dp"
	       android:adjustViewBounds="true"
	       android:maxHeight="400dp"
	       android:maxWidth="400dp"
	       android:scaleType="fitCenter"
	       android:layout_gravity="center"
	       android:src="@drawable/menutext" />
	
	   <ImageButton
	       android:id="@+id/viewClick"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignLeft="@+id/addDishBtn"
	       android:layout_below="@+id/addDishBtn"
	       android:layout_marginTop="16dp"
	       android:adjustViewBounds="true"
	       android:background="@null"
	       android:maxHeight="200dp"
	       android:maxWidth="160dp"
	       android:onClick="viewClick"
	       android:layout_gravity="center"
	       android:scaleType="fitCenter"
	       android:src="@drawable/viewlikes" />
	
	   <ImageButton
	       android:id="@+id/addDish"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_below="@+id/imageView3"
	       android:layout_centerHorizontal="true"
	       android:layout_marginTop="18dp"
	       android:adjustViewBounds="true"
	       android:background="@null"
	       android:maxHeight="200dp"
	       android:maxWidth="160dp"
	       android:onClick="addClick"
	       android:layout_gravity="center"
	       android:scaleType="fitCenter"
	       android:src="@drawable/adddishbtn" />

	   <Button
	       android:id="@+id/button1"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="View dishes" 
	       android:onClick="viewDishes"/>

    </LinearLayout>

</ScrollView>
